@import "variable"

.menuBtnOuter
  position fixed
  width: 100px
  right -45px
  border-left solid 3px
  border-top solid 3px
  border-bottom solid 3px
  color: colorWhite
  font-weight bolder
  z-index 9999

#libBtnOuter
  @extend .menuBtnOuter
  top 130px
  background colorRed2
  border-color colorGray2

#moduleBtnOuter
  @extend .menuBtnOuter
  top 290px
  background colorBlue2
  border-color colorGray2

.menuBtn
  padding 30px 15px
  width: 25px
  cursor pointer
  text-align center

#libBtn
  @extend .menuBtn

#moduleBtn
  @extend .menuBtn

.menuItemBox
  width: 90%
  text-align center

#libMenuItemBox
  @extend .menuItemBox

#moduleMenuItemBox
  @extend .menuItemBox

.menuItem
  display inline-block
  cursor pointer
  font-size: 1.5em
  text-align center
  padding 15px
  margin 10px 10px
  color colorWhite
  background colorDark
  border 3px solid colorWhite
  min-width 70px
  &:hover
    color colorGray1
    background colorWhite