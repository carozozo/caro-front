colorGray1 = #b5b5b5
colorGray2 = darken(#b5b5b5, 30%)
colorGray3 = darken(#b5b5b5, 60%)
colorGreen1 = #83af2b
colorGreen2 = darken(#83af2b, 30%)
colorGreen3 = darken(#83af2b, 60%)
colorRed1 = #c72228
colorRed2 = darken(#c72228, 30%)
colorRed3 = darken(#c72228, 60%)
colorBlue1 = #31b3bb
colorBlue2 = darken(#31b3bb, 30%)
colorBlue3 = darken(#31b3bb, 60%)
colorYellow1 = #b8b834
colorYellow2 = darken(#b8b834, 30%)
colorYellow3 = darken(#b8b834, 60%)
colorWhite = #e1e1e1
colorDark = #252525

.menuBtnOuter
  position fixed
  width: 100px
  right -45px
  border-left solid 3px
  border-top solid 3px
  border-bottom solid 3px
  color: colorWhite
  font-weight bolder
  z-index 9999

#libBtnOuter
  @extend .menuBtnOuter
  top 130px
  background colorRed2
  border-color colorGray2

#moduleBtnOuter
  @extend .menuBtnOuter
  top 290px
  background colorBlue2
  border-color colorGray2

.menuBtn
  padding 30px 15px
  width: 25px
  cursor pointer
  text-align center

#libBtn
  @extend .menuBtn

#moduleBtn
  @extend .menuBtn

.menuItemBox
  width: 90%
  height: 100%
  text-align center

#libMenuItemBox
  @extend .menuItemBox

#moduleMenuItemBox
  @extend .menuItemBox

.menuItem
  display inline-block
  cursor pointer
  font-size: 1.5em
  text-align center
  padding 15px
  margin 10px 10px
  color colorWhite
  background colorDark
  border 3px solid colorWhite
  min-width 70px
  &:hover
    color colorGray1
    background colorWhite