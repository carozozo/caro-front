@import "basic"

body
  @extend .bgWhite
  @extend .colorDark
  position relative
  margin 0
  padding 0
  font-size 20px
  line-height 1.3em
  font-family "微軟正黑體", Arial, Helvetica, sans-serif
  min-width 640px

a
  @extend .colorBlue1
  cursor pointer
  margin-left 5px
  margin-right 5px
  text-decoration underline

select
  font-size 1em
  padding 2px 10px
  margin-left 5px
  margin-right 5px
  border-radius 10px
  min-width 50px

input[type='text']
  height 26px
  border-radius 10px
  padding 0 10px
  font-size 0.9em

.btn1
  @extend .colorWhite
  cursor pointer
  display inline-block
  background alpha(colorGray3, 0.7)
  padding 2px 18px
  border-radius 10px
  font-weight bold
  font-size 1em
  text-decoration none
  text-shadow 0 -1px 0 rgba(0, 0, 0, 0.75)
  margin-left 5px
  margin-right 5px
  &:hover
    background alpha(colorGray3, 0.9)

.btn2
  @extend .colorWhite
  cursor pointer
  display inline-block
  background alpha(colorDark, 0.7)
  padding 2px 18px
  border-radius 10px
  font-weight bold
  font-size 1em
  text-decoration none
  text-shadow 0 -1px 0 rgba(0, 0, 0, 0.75)
  margin-left 5px
  margin-right 5px
  &:hover
    background alpha(colorDark, 0.9)

inputText(width)
  width width
  height 26px
  border-radius 10px
  padding 0 10px
  font-size 0.9em

.link
  @extend a

.input40
  inputText(40px)

.input60
  inputText(60px)

.input80
  inputText(80px)

.input100
  inputText(100px)

.input120
  inputText(120px)

#colors
  display none

#container
  position absolute
  top 80px
  left 10%
  width 80%
  min-width 600px
  padding 20px 10px
  z-index 10

.mainTitle
  overflow hidden
  font-size 2em
  line-height 1.5em
  border-bottom solid colorDark
  z-index 100
  padding-left 10px
  height 57px

.content
  margin-top 6px
  padding 4px 10px 0

.subContent
  margin-top 3px
  padding 2px 10px 0

.separator1
  height 5px

.separator2
  height 10px

.separator3
  height 20px

.separator4
  height 30px

.separator5
  height 40px

.separator6
  height 50px

.tab1
  padding-left 20px

.tab2
  padding-left 40px

.tab3
  padding-left 60px

.tab4
  padding-left 80px

.tab5
  padding-left 100px

.title
  color: colorWhite
  margin-top 5px
  font-size 1.5em
  padding 5px 10px
  line-height 1.2em
  border-radius 5px

.title1
  @extend .bgGray2

.title2
  @extend .bgGreen2

.title3
  @extend .bgRed2

.title4
  @extend .bgBlue2

.title5
  @extend .bgYellow2

subTitle()
  color colorWhite
  margin 20px 0 10px
  padding 5px 10px
  line-height 2em

.subTitle1
  @extend .bgGray1
  subTitle()

.subTitle2
  @extend .bgGreen1
  subTitle()

.subTitle3
  @extend .bgRed1
  subTitle()

.subTitle4
  @extend .bgBlue1
  subTitle()

.subTitle5
  @extend .bgYellow1
  subTitle()

.tip1
  @extend .colorGray2
  font-weight bolder

.tip2
  @extend .colorGreen2
  font-weight bolder

.tip3
  @extend .colorRed2
  font-weight bolder

.tip4
  @extend .colorBlue2
  font-weight bolder

.tip5
  @extend .colorYellow2
  font-weight bolder

.block
  margin 10px 0
  padding 10px
  width 90%
  min-width 200px
  overflow auto

.block1
  @extend .block
  background-color colorWhite

.block2
  @extend .block
  background-color colorGray1

.block3
  @extend .block
  background-color colorGray2

.inlineBlock
  @extend .block
  display inline-block