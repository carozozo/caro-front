colorGray1 = #b3b3b3
colorGray2 = darken(#b3b3b3, 30%)
colorGray3 = darken(#b3b3b3, 60%)
colorGreen1 = #719725
colorGreen2 = darken(#719725, 30%)
colorGreen3 = darken(#719725, 60%)
colorRed1 = #c72228
colorRed2 = darken(#c72228, 30%)
colorRed3 = darken(#c72228, 60%)
colorBlue1 = #31b3bb
colorBlue2 = darken(#31b3bb, 30%)
colorBlue3 = darken(#31b3bb, 60%)
colorYellow1 = #b8b834
colorYellow2 = darken(#b8b834, 30%)
colorYellow3 = darken(#b8b834, 60%)
colorWhite = #e1e1e1
colorDark = #252525

.colorGray1
  color colorGray1

.colorGray2
  color colorGray2

.colorGreen1
  color colorGreen1

.colorGreen2
  color colorGreen2

.colorRed1
  color colorRed1

.colorRed2
  color colorRed2

.colorBlue1
  color colorBlue1

.colorBlue2
  color colorBlue2

.colorYellow1
  color colorYellow1

.colorYellow2
  color colorYellow2

.colorWhite
  color colorWhite

.colorDark
  color colorDark

.bgGray1
  background-color colorGray2

.bgGray2
  background-color colorGray3

.bgGreen1
  background-color colorGreen2

.bgGreen2
  background-color colorGreen3

.bgRed1
  background-color colorRed2

.bgRed2
  background-color colorRed3

.bgBlue1
  background-color colorBlue2

.bgBlue2
  background-color colorBlue3

.bgYellow1
  background-color colorYellow2

.bgYellow2
  background-color colorYellow3

.bgWhite
  background-color colorWhite

.bgDark
  background-color colorDark

body
  @extend .bgWhite
  @extend .colorDark
  margin 0
  padding 0
  font-size 20px
  line-height 1.3em
  font-family "微軟正黑體", Arial, Helvetica, sans-serif
  min-width 640px

a
  @extend .colorBlue1
  cursor pointer
  margin-left 5px
  margin-right 5px
  text-decoration underline

select
  font-size 1em
  padding 2px 10px
  margin-left 5px
  margin-right 5px
  border-radius 10px
  min-width 50px

input[type='text']
  height 26px
  border-radius 10px
  padding 0 10px
  font-size 0.9em

.btn
  @extend .colorWhite
  cursor pointer
  display inline-block
  background -webkit-linear-gradient(top, rgba(40, 40, 40, 0.8), rgba(35, 35, 35, 0.7) 50%, rgba(10, 10, 10, 0.7) 50%, rgba(0, 0, 0, 0.8))
  padding 2px 18px
  border-radius 10px
  font-weight bold
  font-size 1em
  text-decoration none
  text-shadow 0 -1px 0 rgba(0, 0, 0, 0.75)
  margin-left 5px
  margin-right 5px
  &:hover
    background -webkit-linear-gradient(top, rgba(40, 40, 40, 0.9), rgba(35, 35, 35, 0.8) 50%, rgba(10, 10, 10, 0.8) 50%, rgba(0, 0, 0, 0.9))

.btn2
  @extend .colorWhite
  cursor pointer
  display inline-block
  background -webkit-linear-gradient(top, rgba(230, 230, 230, 0.5), rgba(177, 177, 177, 0.4) 50%, rgba(108, 108, 108, 0.4) 50%, rgba(147, 147, 147, 0.5))
  padding 2px 18px
  border-radius 10px
  font-weight bold
  font-size 1em
  text-decoration none
  text-shadow 0 -1px 0 rgba(0, 0, 0, 0.75)
  margin-left 5px
  margin-right 5px
  &:hover
    background -webkit-linear-gradient(top, rgba(201, 201, 201, 0.9), rgba(144, 144, 144, 0.8) 50%, rgba(77, 77, 77, 0.8) 50%, rgba(117, 117, 117, 0.9))

inputText(width)
  width width
  height 26px
  border-radius 10px
  padding 0 10px
  font-size 0.9em

.link
  @extend a

.input40
  inputText(40px)

.input60
  inputText(60px)

.input80
  inputText(80px)

.input100
  inputText(100px)

.input120
  inputText(120px)

#container
  margin-top 100px
  margin-left auto
  margin-right auto
  width 80%
  min-width 600px
  padding 20px 10px

.mainTitle
  overflow hidden
  font-size 2em
  line-height 1.5em
  border-bottom solid colorDark
  z-index 100
  padding-left 10px
  height 57px

.content
  margin-top 6px
  padding 4px 10px 0

.subContent
  margin-top 3px
  padding 2px 10px 0

.separator1
  height 5px

.separator2
  height 10px

.separator3
  height 20px

.separator4
  height 30px

.separator5
  height 40px

.separator6
  height 50px

.tab1
  padding-left 10px

.tab2
  padding-left 20px

.tab3
  padding-left 30px

.tab4
  padding-left 40px

.tab5
  padding-left 50px

.title
  color: colorWhite
  margin-top 5px
  font-size 1.5em
  padding 5px 10px
  line-height 1.2em
  border-radius 5px

.title1
  @extend .bgGray2

.title2
  @extend .bgGreen2

.title3
  @extend .bgRed2

.title4
  @extend .bgBlue2

.title5
  @extend .bgYellow2

subTitle()
  color colorWhite
  margin 20px 0 10px
  padding 5px 10px
  line-height 2em

.subTitle1
  @extend .bgGray1
  subTitle()

.subTitle2
  @extend .bgGreen1
  subTitle()

.subTitle3
  @extend .bgRed1
  subTitle()

.subTitle4
  @extend .bgBlue1
  subTitle()

.subTitle5
  @extend .bgYellow1
  subTitle()

.tip1
  @extend .colorGray2
  font-weight bolder

.tip2
  @extend .colorGreen2
  font-weight bolder

.tip3
  @extend .colorRed2
  font-weight bolder

.tip4
  @extend .colorBlue2
  font-weight bolder

.tip5
  @extend .colorYellow2
  font-weight bolder

.block
  @extend .bgDark
  @extend .colorWhite
  margin 10px 0
  padding 10px
  width 90%
  min-width 200px
  overflow auto

.inlineBlock
  @extend .block
  display inline-block

@media screen and (max-width: 730px)
  .linkWord
    display none