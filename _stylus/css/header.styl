@import "basic"

#header
  position fixed
  top 0
  width 100%
  height 50px
  padding 20px 0 20px 10px
  overflow hidden
  z-index 9999
  min-width 640px

#headerContent, #headerBg
  position absolute

#headerContent
  z-index 10

#headerBg
  z-index 5
  top 0
  width 100%
  height 100%

#headerTitle, #headerMenu
  display inline-block
  position absolute

#headerTitle
  top 5px
  left 50xp

#headerMenu
  width 500px
  left 280px

#headerTitle, .headerTitleImg
  width 250px
  height 37px

.headerTitleImg
  position absolute

.headerBtn
  display inline-block
  text-align center
  margin 0 5px
  cursor pointer
  background rgb(35, 35, 35)
  background -webkit-linear-gradient(top, rgba(40, 40, 40, 0.3), rgba(35, 35, 35, 0.3), rgba(10, 10, 10, 0.3), rgba(0, 0, 0, 0.3))
  padding 8px 18px
  border-radius 50px
  border 2px solid rgba(0, 0, 0, 0.7)
  border-bottom 2px solid rgba(0, 0, 0, 0.7)
  border-top 2px solid rgba(0, 0, 0, 1)
  color rgb(255, 255, 255)
  color rgba(255, 255, 255, 0.8)
  font-family Helvetica, Arial, sans-serif
  font-weight bold
  font-size 13px
  text-decoration none
  text-shadow 0 -1px 0 rgba(0, 0, 0, 0.75)
  box-shadow inset 0 1px 0 rgba(255, 255, 255, 0.05)
  &:hover
    background rgb(40, 40, 40)
    background -webkit-linear-gradient(top, rgba(40, 40, 40, 0.6), rgba(35, 35, 35, 0.6) 50%, rgba(10, 10, 10, 0.8) 50%, rgba(0, 0, 0, 0.8))

.githubIcon
  opacity 0.6
  background url("../images/blacktocat.png") 0 0 no-repeat
  display inline-block
  width 16px
  height 16px
  margin 4px 8px 0 0
  float left

.strip
  position absolute
  top 0
  right 10px
  width:1px
  height 200px
  margin-top -100px
  background colorWhite

@media screen and (max-width: 820px)
  .linkWord
    display none