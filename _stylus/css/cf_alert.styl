.alert
  position: fixed
  z-index: 10000
  font-size: 18px
  text-align: center
  padding: 30px 10px 10px 10px
  top: 10%
  left: 50%
  min-width: 200px
  max-width: 300px
  box-shadow: 5px 5px 20px grey
  border-radius: 10px
  border: 3px #808080
  color: #0f1711
  background: #fff

.alertBg
  position: absolute
  top: 0
  left: 0
  width: 100%
  height: 100%
  z-index: 9999

.alertMsg
  padding: 5px

.alertOkBtn
  margin-bottom: 0
  margin-top: 30px
  padding: 10px
  background: #ccc
  cursor: pointer
  text-align: center

.alertOkBtn:hover
  background: #ddd