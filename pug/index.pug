      <script type="text/javascript">
      // 強制轉換 https
      var href = location.href;
      if (href.indexOf('localhost') < 0 && href.indexOf('https:') < 0) {
        location.href = href.replace('http:', 'https:');
      }
      </script>
    //utf-8
    meta(charset='utf-8')
    meta(http-equiv='Content-Type', content='text/html; charset=utf-8')
